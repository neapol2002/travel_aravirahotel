    .container
        .row
            .col-md-8.col-md-offset-2
                .section-title-area.section-title-one.text-center
                    .title-box
                        .title-box-inner.tb
                            .tb-cell
                                h3.section-name
                                    |Search
                                    span
                                        |Room
                                i.fa.fa-angle-down
                    <!--/.site-header-->
                    h2.section-title
                        span
                            |For rates &amp;
                        span
                            |Availability
                    <!--/.section-title-->
                    p.section-title-dec
