                            label.text-uppercase
                                |Departure Date
                            .input.box-radius
                                i.fa.fa-calendar
                                input.calendar.form-controller(type="text" id="date-departure" placeholder="Departure Date")
                            <!--/.input-->
                        <!--/.col-md-3-->
                        
                        .col-md-2.padding-left
                            label.text-uppercase
                                |room
                            .input.box-radius
                                i.fa.fa-caret-down
                                select(name="room")
